  "dependencies": {
    "jsnetworkx": "^0.3.4",
    "knuth-shuffle": "^1.0.1",
    "numjs": "^0.14.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.25",
    "@types/numjs": "^0.14.2",
    "shx": "^0.2.2",
