{
  "name": "chinese-whispers",
  "version": "0.2.9",
  "description": "Chinese Whispers Algorithm",
  "main": "bundles/chinese-whispers.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --module es6",
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && npm run build && npm run rollup && npm run dist:es6to5",
    "dist:es6to5": "tsc --out ./bundles/chinese-whispers.umd.js --target es5 --allowJs bundles/chinese-whispers.es6.umd.js --lib es6,dom",
    "demo": "npm run example:demo",
    "example:demo": "ts-node examples/demo",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --project tsconfig.json && npm run clean && tsc --noEmit",
    "pack": "npm pack",
    "rollup": "rollup -c",
    "test": "tap \"src/**/*.spec.ts\" \"test/**/*.spec.ts\"",
    "test:pack": "bash -x scripts/npm-pack-testing.sh",
    "test:unit": "tap -R tap test/unit/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/huan/chinese-whispers.git"
  },
  "keywords": [
    "chinese",
    "whispers",
    "algorithm",
    "cluster",
    "knn"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/huan/chinese-whispers/issues"
  },
  "homepage": "https://github.com/huan/chinese-whispers#readme",
  "dependencies": {
    "jsnetworkx": "^0.3.4",
    "knuth-shuffle": "^1.0.1",
    "numjs": "^0.16.0"
  },
  "devDependencies": {
    "@types/node": "^10.7.0",
    "@types/numjs": "^0.14.2",
    "@types/semver": "^5.5.0",
    "git-scripts": "^0.2.1",
    "rollup": "^0.65.2",
    "semver": "^5.5.0",
    "shx": "^0.3.2",
    "tap": "^12.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-jsdoc-rules": "^0.1.2",
    "typescript": "^3.1.0-dev.20180802"
  },
  "git": {
    "scripts": {
      "pre-push": "./scripts/pre-push.sh"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "bundles/",
    "src/",
    "dist/"
  ]
}
