{
  "name": "chinese-whispers",
  "version": "0.0.13",
  "description": "Chinese Whispers Algorithm",
  "main": "bundles/chinese-whispers.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --module es6",
    "clean": "shx rm -fr dist/*",
    "dist": "npm run clean && npm run build && npm run rollup && npm run dist:es6to5",
    "dist:es6to5": "tsc --out ./bundles/chinese-whispers.umd.js --target es5 --allowJs bundles/chinese-whispers.es6.umd.js --lib es6,dom",
    "demo": "npm run example:demo",
    "example:demo": "ts-node examples/demo",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --version && tslint --project tsconfig.json --type-check --exclude \"dist/\" \"{bin,examples,src,tests}/**/*.ts\" && npm run clean && tsc --noEmit",
    "rollup": "rollup -c",
    "test": "tap \"src/**/*.spec.ts\" \"test/**/*.spec.ts\"",
    "test:npm": "npm run dist && export TMPDIR=/tmp/chinese-whispers-npm.$$ && mkdir $TMPDIR && npm pack && mv chinese-whispers-*.*.*.tgz $TMPDIR && cp tests/fixtures/smoke-testing.js $TMPDIR && cd $TMPDIR && npm init -y && npm install chinese-whispers-*.*.*.tgz && node smoke-testing.js",
    "test:unit": "tap -R tap test/unit/**/*.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zixia/chinese-whispers.git"
  },
  "keywords": [
    "chinese",
    "whispers",
    "algorithm",
    "cluster",
    "knn"
  ],
  "author": "Huan LI <zixia@zixia.net>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zixia/chinese-whispers/issues"
  },
  "homepage": "https://github.com/zixia/chinese-whispers#readme",
  "dependencies": {
    "jsnetworkx": "^0.3.4",
    "knuth-shuffle": "^1.0.1",
    "numjs": "^0.14.2"
  },
  "devDependencies": {
    "@types/node": "^8.0.25",
    "@types/numjs": "^0.14.2",
    "rollup": "^0.49.2",
    "shx": "^0.2.2",
    "tap": "^10.7.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-jsdoc-rules": "^0.1.2",
    "typescript": "^2.4.2"
  },
  "files": [
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "bundles/",
    "src/",
    "dist/"
  ]
}
